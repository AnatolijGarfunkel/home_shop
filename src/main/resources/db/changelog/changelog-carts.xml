<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1740151712483-1" author="Tolya">
        <createTable tableName="carts">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_carts"/>
            </column>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1740151712483-2" author="Tolya">
        <addUniqueConstraint columnNames="user_id" constraintName="uc_carts_user" tableName="carts"/>
    </changeSet>

    <changeSet id="1740151712483-3" author="Tolya">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="carts" constraintName="FK_CARTS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="shop_users"/>
    </changeSet>

</databaseChangeLog>